<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic to all domains, required for internal URLs on home network -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <!-- Allow user-added CAs for development and self-signed certs -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>